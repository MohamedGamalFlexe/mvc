@model mvc.Models.Department

@{
    ViewData["Title"] = "Add";
}

<h1>Add Department</h1>

<form method="get" action="/Department/SaveAdd">
    <div class="form-group m-1">
        <label for="Name">Name</label>
        <input type="text" value="@Model?.Name" class="form-control" id="Name" name="Name"  />
    </div>
    <div class=" form-group m-1">
        <label for="ManagerName">Manager Name</label>
        <input type="text" value="@Model?.ManagerName" class="form-control" id="ManagerName" name="ManagerName" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add Department</button>
</form>

<a href="/Department/Index" class="btn btn-warning mt-1">Back To List</a>
