@model mvc.ViewModel.EmpWithDeptListViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form method="post" action="/Employee/SaveEdit?id=@Model.Id">
    <input type="hidden" value="@Model.Id" id="Id" name="Id" />
    <div class="form-group m-1">
        <label for="Name">Name</label>
        <input type="text" value="@Model?.Name" class="form-control" id="Name" name="Name" />
    </div>
    <div class="form-group" accesskey="" >
            <label for="Salary">Salary</label>
        <input type="number" value="@Model?.Salary" class="form-control" id="Salary" name="Salary" />
    </div>
    <div class="form-group m-1">
        <label for="JobTitle">Job Title</label>
        <input type="text" value="@Model?.JobTitle" class="form-control" id="JobTitle" name="JobTitle" />
    </div>
    <div class="form-group m-1">
        <label for="ImageURL">Image URL</label>
        <input type="text" value="@Model?.ImageURL" class="form-control" id="ImageURL" name="ImageURL" />
    </div>
    <div class="form-group m-1">
        <label for="Address">Address</label>
        <input type="text" value="@Model?.Address" class="form-control" id="Address" name="Address" />
    </div>
    <div class="form-group m-1">
        <label for="Department">Department</label>
        <select class="form-control" id="DepartmentId" name="DepartmentId">
            @foreach (var dept in Model.DeptList)
            {
                <option value="@dept.Id" selected="@(dept.Id == Model.DepartmentID ? "selected" : false)" >@dept.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save Edit</button>
</form>
