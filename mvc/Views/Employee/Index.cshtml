@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Salary</th>
            <th>JobTitle</th>
            <th>ImageURL</th>
            <th>Address</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Salary</td>
                <td>@item.JobTitle</td>
                <td>@item.ImageURL</td>
                <td>@item.Address</td>
                <td>@item.Department.Name</td>
                <td>
                    <a href="/Employee/Edit/@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

